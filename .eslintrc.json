{
    "extends": "react-app",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
            "jsx": true
      }
    },
    "rules": {
      "semi": "error",
      "no-console": "warn",
      "no-var": "warn",
      "prefer-const" : "warn",
      "template-curly-spacing": "warn"
    },
    "overrides": [
      {
        "files": ["*WeatherForecast.js"],
        "rules": {
          "react-hooks/exhaustive-deps": "off"
        }
      }
    ]
}
